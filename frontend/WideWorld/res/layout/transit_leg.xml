<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="65dp"
        android:gravity="center_horizontal"
        android:background="@drawable/back">
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="TRANSIT"
	        android:textSize="10dp"
	        android:background="@drawable/back"
	        android:padding="3dp" >
	    </TextView>
	
	    <TextView
	        android:id="@+id/leg_duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="23"
	        android:textSize="40dp" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="mins"
	        android:textSize="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/back">

	   <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >

	        <TextView
	            android:id="@+id/route_name"
	            android:layout_centerVertical="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:singleLine="true"
	            android:text="Fake Route Name"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp" />

	    </RelativeLayout>

	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/line" />
        
	   <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_weight="1" >

	        <TextView
	            android:id="@+id/origin_name"
	            android:layout_centerVertical="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@+id/origin_time"
	            android:layout_alignParentLeft="true"
	            android:text="Kendall/MIT Station - Outbound"
	            android:ellipsize="end"
	            android:singleLine="true"
	            android:paddingLeft="10dp" />
	        


	        			<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_toLeftOf="@+id/origin_time"
	            android:src="@drawable/line" />
	            <TextView
	                android:id="@+id/origin_time"
	            	android:layout_width="45dp"
	            	android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:text="12:55"
	                android:gravity="center"
	                android:textSize="15dp" />

	    </RelativeLayout>

	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/line" />

	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_weight="1" >

	        <TextView
	            android:id="@+id/dest_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:paddingLeft="10dp"
	            android:layout_toLeftOf="@+id/dest_time"
	            android:layout_alignParentLeft="true"
	            android:ellipsize="end"
	            android:singleLine="true"
	            android:text="Porter Sq - Outbound" />
			<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_toLeftOf="@+id/dest_time"
	            android:src="@drawable/line" />

	            <TextView
	                android:id="@+id/dest_time"
	            	android:layout_width="45dp"
	            	android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:text="1:25"
	                android:gravity="center"
	                android:textSize="15dp" />

	    </RelativeLayout>

    </LinearLayout>



</LinearLayout>